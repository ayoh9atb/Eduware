<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
        
        <resource-bundle>
            <base-name>com.s3sys.bundles.LocaleBundle</base-name>
            <var>msg</var>
        </resource-bundle> 
        
        <resource-bundle>
            <base-name>com.s3sys.bundles.MenuLocaleBundle</base-name>
            <var>menu</var>
        </resource-bundle> 
        
    </application>

<!--*******************CONVERTERS*******************************-->
    <converter>
        <description>A Converter for converting Strings to Uppercase</description>
        <converter-id>convertToUpper</converter-id>
        <converter-class>
        com.rsdynamix.web.util.converter.StringAsUpper
        </converter-class>
    </converter>

</faces-config>
